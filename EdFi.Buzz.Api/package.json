{
  "name": "edfi.buzz.api",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && copyfiles src/**/*.graphql dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn build && nest start",
    "start:dev": "yarn build && nest start --watch",
    "start:debug": "yarn build && nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "graphql-typings": "npx ts-node src/generate-typings",
    "test:ci": "SET CI=true && SET TEAMCITY_VERSION = 1 && yarn test --testResultsProcessor=jest-teamcity-reporter --reporters=jest-junit",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\" --format ./node_modules/eslint-teamcity/index.js"
  },
  "dependencies": {
    "@apollo/gateway": "^0.16.9",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.4.5",
    "@nestjs/platform-fastify": "^7.4.4",
    "@nestjs/typeorm": "^7.1.0",
    "and": "^0.0.3",
    "apollo-gateway": "^0.0.1",
    "apollo-server": "^2.14.4",
    "apollo-server-fastify": "^2.14.4",
    "class-transformer": "^0.3.0",
    "class-validator": "0.12.2",
    "dotenv": "^8.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "graphile-worker": "^0.6.0",
    "graphql": "14.5.0",
    "graphql-tools": "6.0.9",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.4",
    "mssql": "^6.2.3",
    "node-fetch": "^2.6.1",
    "node-postgres": "^0.6.2",
    "pg": "^8.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.4",
    "typeorm": "^0.2.25",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/graphql": "14.0.7",
    "@types/jest": "25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.0.2",
    "copyfiles": "^2.3.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-typescript": "^9.0.0",
    "eslint-config-airbnb-typescript-prettier": "3.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-teamcity": "^3.0.1",
    "jest": "26.0.1",
    "jest-junit": "^10.0.0",
    "jest-teamcity-reporter": "^0.9.0",
    "prettier": "1.18.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "synp": "^1.7.0",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "apollo-server-core": "^2.15.0",
    "class-transformer": "^0.3.0",
    "class-validator": "0.12.2"
  }
}
