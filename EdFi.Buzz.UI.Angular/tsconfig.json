{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Node",
    "skipLibCheck": true, // this is enabled because of typescript errors on some libraries, it gets solved if it is updated to angular 9 and typescript 3.7+
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
  }
}
